<div class="app app-header-fixed ">
  <div class="container w-xxl w-auto-xs">
    <a href class="navbar-brand block m-t">Progress Tool</a>
    <div class="m-b-lg">
      <div class="wrapper text-center">
        <h4>Resend confirmation instructions</h4>
      </div>

      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'form-validation' }) do |f| %>

        <div class="text-danger wrapper text-center">
          <%= devise_error_messages! %>
        </div>
        
        <div class="list-group list-group-sm">
          <div class="list-group-item">
            <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), placeholder: 'Email', class: 'form-control no-border' %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Resend confirmation instructions", class: "btn btn-lg btn-primary btn-block" %><br/>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
